+# Anubis Rails Application Environment Variables
+#RAILS_ENV=development
+#DATABASE_URL=postgresql://postgres:postgres@postgres17:5432/anubis_development
+
+DB_NAME=anubis_development
+DB_HOST=postgres17
+DB_USER=postgres
+DB_PASSWORD=postgres
+DB_PORT=5432
+
+KAFKA_BROKERS=kafka:9092
+KAFKA_GROUP_ID=anubis-consumers
+KAFKA_CLIENT_ID=anubis-app
+BINDING=0.0.0.0
+PORT=3000
+
+KAFKA_BOOTSTRAP_SERVERS=kafka:9092
+KAFKA_SECURITY_MECHANISM=PLAIN
+KAFKA_SECURITY_USERNAME=admin
+KAFKA_SECURITY_PASSWORD=admin-secret
+KAFKA_SECURITY_PROTOCOL=sasl_plaintext
+
+# Rails Configuration
+RAILS_LOG_LEVEL=debug
+RAILS_SERVE_STATIC_FILES=true
+
+# Sidekiq Configuration (if needed later)
+SIDEKIQ_CONCURRENCY=5
+
+# Application URLs
+ANUBIS_BASE_URL=http://localhost:3007
+QUERO_BOLSA_URL=http://quero_bolsa:3000
+QUERO_CRM_URL=http://quero-crm:8055
+
+# Tidewave Configuration
+TIDEWAVE_ENABLED=true
+
+# Health Check
+HEALTH_CHECK_PATH=/health
+
+# Database Connection Pool
+DATABASE_POOL=5
+DATABASE_TIMEOUT=5000
+
+# Kafka Consumer Configuration
+KAFKA_SESSION_TIMEOUT=30000
+KAFKA_HEARTBEAT_INTERVAL=10000
+KAFKA_MAX_POLL_RECORDS=100
+
+# Cache Configuration (using memory store since no Redis)
+CACHE_STORE=memory_store
+
+# Action Cable (using async adapter since no Redis)
+ACTION_CABLE_ADAPTER=async
+
+# Bundle Configuration
+BUNDLE_PATH=/usr/local/bundle
+BUNDLE_JOBS=4
+BUNDLE_RETRY=3
+
+# Node.js Configuration
+NODE_ENV=development
